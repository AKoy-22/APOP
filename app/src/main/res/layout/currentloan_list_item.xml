<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- don't remove this layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_btn_white"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBookCover"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/imgBookCover"
                android:maxHeight="110dp"
                android:src="@drawable/cover00"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <!-- book title -->
                <TextView
                    android:id="@+id/txtBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <!-- book author -->
                <TextView
                    android:id="@+id/txtBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBookPublisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/txtBookYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>

                <!-- book category -->
                <TextView
                    android:id="@+id/txtBookCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border_btn_white"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />
                <!-- user borrowing -->
                <TextView
                    android:id="@+id/txtBookOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_person"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- borrowing time -->
                <TextView
                    android:id="@+id/txtBorrowBookDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBorrowExtend"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/bright_blue"
                android:text="@string/btnBorrowExtend"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btnBookReturned"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/navy"
                android:text="@string/btnBookReturned"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>