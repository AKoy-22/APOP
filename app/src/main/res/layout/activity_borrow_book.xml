<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    android:orientation="vertical"
    tools:context=".BorrowBook">

    <!-- Tool Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light"
        android:elevation="10dp">
        <!-- back page icon -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_arrow_left"
            android:contentDescription="@string/imgMessageIcon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
        <!-- page title -->
        <TextView
            android:id="@+id/txtToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txtBorrowBookPage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray" />
        <!-- message icon -->
        <ImageButton
            android:id="@+id/btnMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_message_icon"
            android:contentDescription="@string/imgMessageIcon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
    </androidx.appcompat.widget.Toolbar>

    <!-- search bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="name"
        android:background="@drawable/rounded_button_white"
        android:elevation="4dp"
        android:gravity="bottom|end"
        android:queryBackground="@android:color/transparent"
        app:defaultQueryHint="@string/txt_search_bar"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_centerHorizontal="true"
        tools:layout_centerVertical="true"
        tools:layout_marginRight="20dp" />

    <!-- the context of book 1 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/rounded_button_white"
            android:elevation="4dp">
            <!-- book cover -->
            <ImageView
                android:id="@+id/book_cover1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/imgBookCover"
                android:elevation="4dp"
                android:src="@drawable/book_cover_1" />
            <!-- book title -->
            <TextView
                android:id="@+id/bookTitle1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="@string/txtBookTitle1"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- book author -->
            <TextView
                android:id="@+id/bookAuthor1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:text="@string/txtBookAuthor1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book publisher / year -->
            <TextView
                android:id="@+id/bookPublisher1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:text="@string/txtBookPublisher1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book category -->
            <TextView
                android:id="@+id/bookCategory1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="62dp"
                android:background="@drawable/border_btn_white"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="@string/txtBookFiction"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book owner -->
            <TextView
                android:id="@+id/bookOwner1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="87dp"
                android:text="@string/txtBookOwner1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person"
                tools:ignore="TextContrastCheck" />
            <!-- button for borrow -->
            <Button
                android:id="@+id/btnBorrow"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/bright_blue"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/btnBorrow"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
            <!-- book price -->
            <TextView
                android:id="@+id/txtBookPrice"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/txtBookPrice"
                android:textColor="@color/bright_blue"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- the context of book 2 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:ignore="SpeakableTextPresentCheck">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/rounded_button_white"
            android:elevation="4dp">
            <!-- book cover -->
            <ImageView
                android:id="@+id/bookCover2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/imgBookCover"
                android:elevation="4dp"
                android:src="@drawable/book_cover_2" />
            <!-- book title -->
            <TextView
                android:id="@+id/bookTitle2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="@string/txtBookTitle2"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- book author -->
            <TextView
                android:id="@+id/bookAuthor2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:text="@string/txtBookAuthor2"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book publisher / year -->
            <TextView
                android:id="@+id/bookPublisher2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:text="@string/txtBookPublisher2"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book category -->
            <TextView
                android:id="@+id/bookCategory2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="62dp"
                android:background="@drawable/border_btn_white"
                android:maxWidth="80dp"
                android:minWidth="55dp"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="@string/txtBookNonFiction"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book owner -->
            <TextView
                android:id="@+id/bookOwner2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="87dp"
                android:text="@string/txtBookOwner2"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person"
                tools:ignore="TextContrastCheck" />
            <!-- button for borrow -->
            <Button
                android:id="@+id/btnBorrow2"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/bright_blue"
                android:text="@string/btnBorrow"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
            <!-- book price -->
            <TextView
                android:id="@+id/txtBookPrice2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/txtBookPrice"
                android:textColor="@color/bright_blue"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- the context of book 3 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:ignore="SpeakableTextPresentCheck">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/rounded_button_white"
            android:elevation="4dp">
            <!-- book cover -->
            <ImageView
                android:id="@+id/bookCover3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/imgBookCover"
                android:elevation="4dp"
                android:src="@drawable/book_cover_3"
                tools:ignore="ImageContrastCheck" />
            <!-- book title -->
            <TextView
                android:id="@+id/bookTitle3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="@string/txtBookTitle3"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- book author -->
            <TextView
                android:id="@+id/bookAuthor3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:text="@string/txtBookAuthor3"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book publisher / year -->
            <TextView
                android:id="@+id/bookPublisher3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:text="@string/txtBookPublisher3"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book category -->
            <TextView
                android:id="@+id/bookCategory3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="62dp"
                android:background="@drawable/border_btn_white"
                android:maxWidth="80dp"
                android:minWidth="55dp"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="@string/txtBookFiction"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book owner -->
            <TextView
                android:id="@+id/bookOwner3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="87dp"
                android:text="@string/txtBookOwner3"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person"
                tools:ignore="TextContrastCheck" />
            <!-- button for borrow -->
            <Button
                android:id="@+id/btnGiveAway"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/navy"
                android:padding="0dp"
                android:text="@string/btnGiveAway"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- the bottom menu bar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/nav_bg"
                android:elevation="4dp"
                app:fabCradleVerticalOffset="10dp"
                app:itemIconSize="18dp"
                app:itemIconTint="@color/bright_blue"
                app:itemTextColor="@color/bright_blue"
                app:menu="@menu/bottom_menu" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>