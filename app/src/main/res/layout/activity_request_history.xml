                tools:ignore="TextContrastCheck" />
            <!-- agree button -->
            <ImageButton
                android:id="@+id/btnRequestCheck2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/ic_check"
                android:backgroundTint="@color/blue_green"
                android:contentDescription="@string/imgRequestCheck"
                tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />
            <!-- reject button -->
            <ImageButton
                android:id="@+id/btnRequestCancel2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/ic_cancel"
                android:backgroundTint="@color/red"
                android:contentDescription="@string/imgRequestCancel"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- the context of book 3 -->
