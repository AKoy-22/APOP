<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    android:orientation="vertical">

    <!-- Tool Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light"
        android:elevation="10dp">
        <!-- back page icon -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_arrow_left"
            android:contentDescription="@string/imgMessageIcon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
        <!-- page title -->
        <TextView
            android:id="@+id/txtToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txtReadingTrackerPage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray" />
        <!-- message icon -->
        <ImageButton
            android:id="@+id/btnMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_message_icon"
            android:contentDescription="@string/imgMessageIcon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
    </androidx.appcompat.widget.Toolbar>

    <!-- button of adding book -->
    <Button
        android:id="@+id/btnAddTrackerBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_btn_white"
        android:backgroundTint="@color/dark_blue"
        android:drawableStart="@drawable/ic_add"
        android:elevation="15dp"
        android:padding="10dp"
        android:shadowColor="#000000"
        android:text="@string/btnAddTrackerBook"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="10dp" />


    <!-- the context of book 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button_white"
        android:elevation="4dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">
        <!-- book cover -->
        <ImageView
            android:id="@+id/imgBookCover1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/imgBookCover"
            android:elevation="4dp"
            android:src="@drawable/book_cover_1" />

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <!-- book title -->
            <TextView
                android:id="@+id/txtBookTitle1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/txtBookTitle1"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- book author -->
            <TextView
                android:id="@+id/txtBookAuthor"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/txtBookAuthor1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book publisher / year -->
            <TextView
                android:id="@+id/txtBookPublisher"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/txtBookPublisher1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- book category -->
            <TextView
                android:id="@+id/txtBookCategory"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_btn_white"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="@string/txtBookFiction"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- user borrowing -->
            <TextView
                android:id="@+id/txtBookOwner1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/txtBookOwner1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- borrowing time -->
            <TextView
                android:id="@+id/txtBorrowBookDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtBorrowBookDate"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray"
                android:textSize="13sp"
                tools:ignore="TextContrastCheck" />
            <!-- message -->
            <TextView
                android:id="@+id/txtTrackerMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:text="@string/txtTrackerMessage1"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck"
                tools:textAlignment="textEnd" />
            <!-- button edit -->
            <Button
                android:id="@+id/btnEditPage"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/border_btn_white"
                android:backgroundTint="@color/dark_blue"
                android:padding="0dp"
                android:text="@string/btnEdit"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
        </LinearLayout>
    </LinearLayout>

    <!-- the bottom menu bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- list View -->
        <ListView
            android:id="@+id/ReadingTrackerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:padding="5dp" />
        <!-- bottom menu -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-2dp"
            android:background="@color/nav_bg"
            android:elevation="4dp"
            app:fabCradleVerticalOffset="10dp"
            app:itemIconSize="18dp"
            app:itemIconTint="@color/bright_blue"
            app:itemTextColor="@color/bright_blue"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>
</LinearLayout>