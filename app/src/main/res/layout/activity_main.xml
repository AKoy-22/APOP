<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/light_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck">

    <!-- Tool Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light"
        android:elevation="10dp"
        app:navigationIcon="@drawable/ic_baseline_home_24">

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:textColor="@color/dark_gray" />

        <ImageButton
            android:id="@+id/btn_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_message_icon"
            android:contentDescription="@string/img_message_icon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
    </androidx.appcompat.widget.Toolbar>

    <!-- User profile -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img_user_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="false"
                android:contentDescription="@string/img_user_profile"
                android:src="@drawable/user_profile_img" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60sp"
                android:text="@string/txt_user_name"
                android:textColor="#474846"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_user_item"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="60sp"
                android:layout_marginTop="27sp"
                android:text="@string/txt_user_item"
                android:textColor="#474846"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <!-- search bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="name"
        android:background="@drawable/rounded_button_white"
        android:elevation="4dp"
        android:gravity="bottom|end"
        android:queryBackground="@android:color/transparent"
        app:defaultQueryHint="@string/txt_search_bar"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_centerHorizontal="true"
        tools:layout_centerVertical="true"
        tools:layout_marginRight="20dp" />

    <!--The main button of add book and update book-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_add_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/img_add_book"
                app:srcCompat="@drawable/add_book_button"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btn_update_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/img_update_book"
                app:srcCompat="@drawable/update_book_button"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <!--The main button of borrow book and reading tracker-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_borrow_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/img_borrow_book"
                app:srcCompat="@drawable/borrow_book_button"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

            <ImageButton
                android:id="@+id/btn_reading_tracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/img_reading_tracker"
                app:srcCompat="@drawable/reading_tracker_button"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <!--The message content 1-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_button_white"
            android:elevation="5dp">

            <ImageView
                android:id="@+id/img_message_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="false"
                android:contentDescription="@string/img_message_icon"
                android:src="@drawable/message_gray_icon" />

            <TextView
                android:id="@+id/txt_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="5dp"
                android:text="@string/test_message_context1"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="25dp"
                android:text="@string/test_message_datetime1"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/img_message_icon1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentStart="false"
                android:contentDescription="@string/img_message_icon"
                android:src="@drawable/message_gray_icon" />

            <TextView
                android:id="@+id/txt_message_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="55dp"
                android:text="@string/test_message_context1"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_message_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="75dp"
                android:text="@string/test_message_datetime1"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>