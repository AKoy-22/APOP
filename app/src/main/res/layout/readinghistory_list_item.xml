<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- don't remove this layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_btn_white"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:padding="12dp">


        <ImageView
            android:id="@+id/imgBookCover"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/imgBookCover"
            android:maxHeight="110dp"
            android:src="@drawable/cover00"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <!-- book title -->
            <TextView
                android:id="@+id/txtBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- book author -->
            <TextView
                android:id="@+id/txtBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBookPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/txtBookYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <!-- book category -->
            <TextView
                android:id="@+id/txtBookCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/border_btn_white"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
            <!-- user borrowing -->
            <TextView
                android:id="@+id/txtBookOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_person"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- borrowing time -->
            <TextView
                android:id="@+id/txtBorrowBookDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray"
                android:textSize="13sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>